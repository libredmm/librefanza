<p style="color: green"><%= notice %></p>

<h1>Feeds</h1>

<div id="feeds">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">URI</th>
        <th scope="col">Created at</th>
        <th scope="col">Updated at</th>
        <th scope="col">Accessed at</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tobody>
    <% @feeds.each do |feed| %>
      <tr>
        <th scope="row">
          <%= link_to feed.id, feed %>
        </th>
        <td>
          <button class="btn btn-outline-primary btn-small" data-clipboard-text="<%= CGI.escape(feed.uri) %>">
            <%= feed.uri %>
          </button>
        </td>
        </td>
        <td><%= time_ago_in_words(feed.created_at) %> ago</td>
        <td><%= time_ago_in_words(feed.updated_at) %> ago</td>
        <td><%= time_ago_in_words(feed.accessed_at) %> ago</td>
        <td><%= button_to "Destroy", feed, method: :delete, class: "btn btn-danger"%></td>
      </tr>
    <% end %>
    </tobody>
  </table>
</div>
