<p style="color: green"><%= notice %></p>

<h1>Feeds</h1>

<div id="feeds">
  <table class="table table-responsive table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Tag</th>
        <th scope="col">Created</th>
        <th scope="col">Updated</th>
        <th scope="col">Accessed</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tobody>
    <% @feeds.each do |feed| %>
      <tr>
        <th scope="row" class="align-middle">
          <%= link_to feed.id, feed, class: "btn" %>
        </th>
        <td colspan="4" class="align-middle text-break">
          <%= link_to feed.uri, feed.uri %>
        </td>
        <td class="align-middle">
          <button class="btn btn-info" data-clipboard-text="<%= feed.uri %>">
            <i class="bi bi-clipboard"></i>
          </button>
        </td>
      </tr>
      <tr>
        <th scope="row">
        </th>
        <td class="align-middle">
          <%= bootstrap_form_for feed, class: "mt-3" do |f| %>
            <%= f.text_field(
              :tag,
              label_as_placeholder: true,
              append: f.primary {
                content_tag(:i, nil, class: "bi bi-tag")
              },
              wrapper: { class: '' },
            ) %>
          <% end %>
        </td>
        <td class="align-middle"><%= time_ago_in_words(feed.created_at) %> ago</td>
        <td class="align-middle"><%= time_ago_in_words(feed.updated_at) %> ago</td>
        <td class="align-middle"><%= time_ago_in_words(feed.accessed_at) %> ago</td>
        <td class="align-middle">
          <%= button_to feed, method: :delete, class: "btn btn-danger" do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tobody>
  </table>
</div>
